<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"

            android:weightSum="4">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/time" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thời Gian"
                android:textColor="#fc8747"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cbPartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:text="PartTime" />

            <CheckBox
                android:id="@+id/cbFullTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="FullTime" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"

            android:layout_marginTop="35dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/company" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="100dp"
                android:layout_toRightOf="@id/imageView2"
                android:layout_weight="1"
                android:text="Nơi Đăng"
                android:textColor="#fc8747"
                android:textSize="16sp" />


        </RelativeLayout>

        <EditText
            android:id="@+id/etCompany"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"


            android:hint="Nhập Tên Công Ty/ Người Đăng Tin"
            android:inputType="text"
            android:selectAllOnFocus="false"
            android:singleLine="false" />

        <RelativeLayout
            android:id="@+id/linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etCompany"
            android:layout_marginTop="35dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/job" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="100dp"
                android:layout_toRightOf="@id/imageView3"
                android:layout_weight="1"
                android:text="Công Việc"
                android:textColor="#fc8747"
                android:textSize="16sp" />


        </RelativeLayout>

        <EditText
            android:id="@+id/etJob"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etJob"
            android:layout_alignStart="@+id/etCompany"
            android:layout_below="@+id/linear3"
            android:hint="Nhập Tên Vị Trí Công Việc Cần Tuyển "

            android:inputType="text"
            android:selectAllOnFocus="false"
            android:singleLine="false" />


        <RelativeLayout
            android:id="@+id/linear5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/etJob"
            android:layout_marginTop="40dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/detail" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="38dp"
                android:layout_toRightOf="@id/imageView5"
                android:layout_weight="1"
                android:text="Yêu Cầu Và Chi Tiết Công Việc"
                android:textColor="#fc8747"
                android:textSize="16sp" />


        </RelativeLayout>

        <EditText
            android:id="@+id/etDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="15"
            android:hint="Nhập Chi Tiết/ Yêu Cầu Công Việc  "
            android:inputType="textMultiLine" />

        <RelativeLayout
            android:id="@+id/lineardiachi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etDetails"
            android:layout_marginTop="40dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/maps" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="100dp"
                android:layout_toRightOf="@id/imageView5"
                android:layout_weight="1"
                android:text="Địa chỉ"
                android:textColor="#fc8747"
                android:textSize="16sp" />


        </RelativeLayout>


        <EditText
            android:id="@+id/etAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineardiachi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="15"
            android:hint="72 , Ngô Văn Sở, Liên Chiểu, Đà Nẵng"
            android:inputType="textMultiLine" />

        <RelativeLayout
            android:id="@+id/linearNumberPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/linear7"
            android:layout_marginTop="40dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageViewTimePicker"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/date" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="100dp"
                android:layout_toRightOf="@id/imageView5"
                android:layout_weight="1"
                android:text="Thời Hạn Bài Đăng"
                android:textColor="#fc8747"
                android:textSize="16sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearNumberPicker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/linearNumberPicker"

            android:layout_marginTop="25dp"
            android:weightSum="2">

            <NumberPicker
                android:layout_centerHorizontal="true"
                android:id="@+id/numberPicker"
                android:layout_width="wrap_content"
                android:layout_height="120dp">

            </NumberPicker>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@id/numberPicker"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:text="Ngày"
                android:textColor="#fc8747"
                android:layout_centerInParent="true"
                />


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/linear4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/etAddress"

            android:layout_marginTop="35dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"

                android:layout_weight="1"
                app:srcCompat="@drawable/salary" />

            <EditText
                android:id="@+id/etSalary"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/imageView4"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nhập Lương (VND)"
                android:inputType="number" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linear6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/linear4"

            android:layout_marginTop="25dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/phone" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/imageView4"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nhập Số Điện Thoại Liên Hệ"
                android:inputType="number" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linear7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/linear6"

            android:layout_marginTop="25dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/email" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/imageView7"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nhập Email Liên Hệ"
                android:inputType="textEmailAddress" />


        </RelativeLayout>


        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/linearNumberPicker2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/background"
            android:text="Đăng Tin"
            android:textAllCaps="false"
            android:textColor="#ffffff" />


    </RelativeLayout>
</ScrollView>